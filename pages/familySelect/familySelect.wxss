.page {
  padding: 16px
}

.join-row {
  display: flex;
  flex-direction: row;
  gap: 8px;
  align-items: center
}

.add-row {
  margin-top: 15px
}

.sheet {
  display: flex;
  flex-direction: column;
  height: 100%
}

.sheet-header {
  padding: 12px 16px;
  font-weight: 600;
  font-size: 16px;
  border-bottom: 1px solid #f0f0f0
}

.sheet-body {
  padding: 12px 16px;
  flex: 1;
  overflow: auto
}

.avatar-row {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  text-align: center;
  gap: 12px;
  margin: 12px 0 20px 0
}

.avatar-text {
  color: #666;
  font-size: 12px
}

.avatar-nickname {
  margin-top: 2px;
  font-size: 17px;
  font-weight: 600;
  color: #222
}

.avatar-nickname-input {
  width: 70%;
  min-width: 200px
}

.field {
  margin: 4px 0
}

.label {
  font-size: 14px;
  color: #666;
  margin-bottom: 0px
}

.role-picker {
  padding-top: 0 !important;
  /* 清除顶部内边距 */
  margin-top: 0 !important;
  /* 清除顶部外边距 */
}

.role-display {
  padding: 10px 12px;
  margin-top: 8px;
  background-color: #f5f5f5;
  border-radius: 8px;
  color: #333;
  font-size: 14px;
  text-align: center;
}

.picker-trigger {
  padding: 10px 12px;
  border: 1px solid #e5e5e5;
  border-radius: 8px
}

.sheet-footer {
  padding: 12px 16px;
  border-top: 1px solid #f0f0f0
}

/* 强制移除 t-picker 头部工具栏占位 */
page .t-picker__toolbar {
  display: none !important;
  height: 0 !important;
  padding: 0 !important;
  margin: 0 !important
}
.avatar-row t-avatar { border-radius: 50%; overflow: hidden; }
.avatar {
  display: block;
  width: 72px;
  height: 72px;
  border-radius: 50%;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}

.avatar-wrapper {
  background: transparent;
  padding: 0;
  border: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}