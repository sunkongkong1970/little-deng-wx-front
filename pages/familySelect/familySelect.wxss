.page {
  padding: 16px
}

.join-row {
  display: flex;
  flex-direction: row;
  gap: 8px;
  align-items: center
}

.add-row {
  margin-top: 15px
}

.sheet {
  display: flex;
  flex-direction: column;
  height: 100%
}

.sheet-header {
  padding: 12px 16px;
  font-weight: 600;
  font-size: 16px;
  border-bottom: 1px solid #f0f0f0
}

.sheet-body {
  padding: 12px 16px;
  flex: 1;
  overflow: auto
}

.avatar-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 12px;
  margin-bottom: 12px
}

.avatar-text {
  color: #666
}

.field {
  margin: 4px 0
}

.label {
  font-size: 14px;
  color: #666;
  margin-bottom: 0px
}

.role-picker {
  padding-top: 0 !important;
  /* 清除顶部内边距 */
  margin-top: 0 !important;
  /* 清除顶部外边距 */
}

.picker-trigger {
  padding: 10px 12px;
  border: 1px solid #e5e5e5;
  border-radius: 8px
}

.sheet-footer {
  padding: 12px 16px;
  border-top: 1px solid #f0f0f0
}

/* 强制移除 t-picker 头部工具栏占位 */
page .t-picker__toolbar {
  display: none !important;
  height: 0 !important;
  padding: 0 !important;
  margin: 0 !important
}
