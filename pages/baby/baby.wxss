.page{padding:16px}
.page {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 卡片容器样式 */
.cards-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

/* 宝宝卡片样式 - 适配TDesign组件 */
.baby-card {
  width: 700rpx;
  height: 400rpx;
  overflow: hidden;
}

.baby-card-cover {
  width: 100%;
  height: 100%;
  position: relative;
}

.baby-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  position: absolute;
  top: 0;
  left: 0;
  border: 4rpx solid #f0f0f0;
  border-radius: 20rpx;
}

.baby-name-floating {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  z-index: 10;
  padding: 10rpx 20rpx;
}

/* 添加宝宝卡片样式 */
.add-baby-card {
  width: 700rpx;
  height: 400rpx;
  border: 4rpx dashed #d0d0d0;
  border-radius: 20rpx;
  background-color: #fafafa;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.add-baby-card:active {
  background-color: #f0f0f0;
  border-color: #07C160;
  transform: scale(0.98);
}

.add-icon {
  font-size: 120rpx;
  color: #999;
  font-weight: 300;
  line-height: 1;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.add-baby-card:active .add-icon {
  color: #07C160;
  transform: scale(1.1);
}

.add-text {
  font-size: 32rpx;
  color: #999;
  font-weight: 500;
  transition: all 0.3s ease;
}

.add-baby-card:active .add-text {
  color: #07C160;
}

/* 登录弹窗样式 */
.auth-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  z-index: 9999;
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.auth-modal {
  width: 100%;
  background-color: #ffffff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
  animation: slideUp 0.3s;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.brand {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32px;
}

.slogan {
  margin-top: 12px;
  color: #666;
  font-size: 14px;
  text-align: center;
  max-width: 300px;
}

.actions {
  width: 300px;
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin: 0 auto;
}
