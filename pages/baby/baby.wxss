.page{padding:16px}
.page {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 卡片容器样式 */
.cards-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

/* 宝宝卡片样式 - 适配TDesign组件 */
.baby-card {
  width: 700rpx;
  height: 400rpx;
  overflow: hidden;
}

.baby-card-cover {
  width: 100%;
  height: 100%;
  position: relative;
}

.baby-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  position: absolute;
  top: 0;
  left: 0;
  border: 4rpx solid #f0f0f0;
  border-radius: 20rpx;
}

.baby-name-floating {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  z-index: 10;
  padding: 10rpx 20rpx;
}

/* 添加宝宝卡片样式 */
.add-baby-card {
  width: 700rpx;
  height: 400rpx;
  border: 4rpx dashed #d0d0d0;
  border-radius: 20rpx;
  background-color: #fafafa;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.add-baby-card:active {
  background-color: #f0f0f0;
  border-color: #07C160;
  transform: scale(0.98);
}

.add-icon {
  font-size: 120rpx;
  color: #999;
  font-weight: 300;
  line-height: 1;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.add-baby-card:active .add-icon {
  color: #07C160;
  transform: scale(1.1);
}

.add-text {
  font-size: 32rpx;
  color: #999;
  font-weight: 500;
  transition: all 0.3s ease;
}

.add-baby-card:active .add-text {
  color: #07C160;
}
