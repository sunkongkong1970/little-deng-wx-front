.page {
  padding: 16px;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息卡片 */
.card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16px;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.header-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-section {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  background-color: #fff;
}

.info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  flex: 1;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.edit-btn {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  padding: 6rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.role-row {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

/* 邀请码按钮 */
.invite-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.invite-btn t-icon {
  color: #fff;
}

.invite-text {
  font-size: 22rpx;
  color: #fff;
}

/* 底部版权 */
.footer {
  color: #999;
  text-align: center;
  font-size: 24rpx;
  margin-top: 48rpx;
}

/* 编辑弹窗样式 - 复用 familySelect 样式 */
.sheet {
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  height: 50vh;
}

.sheet-header {
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.sheet-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.sheet-header .save-btn {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 12rpx 32rpx;
  background-color: #0052d9;
  color: #fff;
  font-size: 28rpx;
  border-radius: 6rpx;
  font-weight: 400;
  cursor: pointer;
  transition: background-color 0.2s ease;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  box-sizing: border-box;
}

.sheet-header .save-btn:active {
  background-color: #003cab;
}

.sheet-body {
  padding: 32rpx;
  flex: 1;
  overflow: hidden;
}

.avatar-row {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  text-align: center;
  gap: 12px;
  margin: 12px 0 20px 0;
}

.avatar-nickname {
  margin-top: 2px;
  font-size: 17px;
  font-weight: 600;
  color: #222;
}

.avatar-nickname-input {
  width: 70%;
  min-width: 200px;
}

.avatar {
  display: block;
  width: 72px;
  height: 72px;
  border-radius: 50%;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}

.avatar-wrapper {
  background: transparent;
  padding: 0;
  border: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}

.avatar-wrapper::after {
  border: none;
}

.field {
  margin: 4px 0;
}

.label {
  font-size: 14px;
  color: #666;
  margin-bottom: 0px;
}

.role-picker {
  padding-top: 0 !important;
  margin-top: 0 !important;
}

/* 强制移除 t-picker 头部工具栏占位 */
page .t-picker__toolbar {
  display: none !important;
  height: 0 !important;
  padding: 0 !important;
  margin: 0 !important;
}

/* 邀请码弹窗样式 */
.invite-sheet {
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx 30rpx;
}

/* 邀请码弹窗 */
.invite-body {
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.invite-code-box {
  width: 100%;
  padding: 40rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.invite-code {
  font-size: 48rpx;
  font-weight: 600;
  color: #000;
  letter-spacing: 8rpx;
}

.invite-tip {
  font-size: 24rpx;
  color: #999;
}

.invite-footer {
  display: flex;
  gap: 20rpx;
  margin-top: 32rpx;
}

.invite-footer t-button {
  flex: 1;
}
