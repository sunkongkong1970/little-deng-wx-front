/* 页面容器 */
.page {
	min-height: 100vh;
	background: #f5f5f5;
	padding-bottom: calc(env(safe-area-inset-bottom) + 32rpx);
}

/* 个人信息头部卡片 */
.profile-card {
	position: relative;
	margin: 30rpx auto;
	margin-bottom: 24rpx;
	width: 700rpx;
	border-radius: 24rpx;
	overflow: hidden;
	background: #fff;
	box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.cover-container {
	position: relative;
	width: 700rpx;
	height: 400rpx;
	overflow: hidden;
	cursor: pointer;
	transition: all 0.3s ease;
}

.cover-container:active {
	opacity: 0.9;
	transform: scale(0.99);
}

.cover-image {
	width: 100%;
	height: 100%;
	object-fit: cover;
}

.overlay {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.3) 100%);
}

.user-info-container {
	position: absolute;
	bottom: 24rpx;
	left: 24rpx;
	display: flex;
	align-items: center;
	gap: 16rpx;
	z-index: 2;
}

.user-avatar {
	width: 80rpx;
	height: 80rpx;
	border: 4rpx solid #fff;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
	border-radius: 50%;
	overflow: hidden;
	background: #f0f0f0;
	flex-shrink: 0;
}

.user-nickname {
	font-size: 32rpx;
	font-weight: 600;
	color: #fff;
	text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
}

/* 发布按钮 */
.publish-btn {
	position: absolute;
	top: 32rpx;
	right: 32rpx;
	width: 80rpx;
	height: 80rpx;
	background: rgba(255, 255, 255, 0.95);
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 4rpx 16rpx rgba(255, 77, 109, 0.3);
	transition: all 0.3s ease;
	z-index: 3;
}

.publish-btn:active {
	transform: scale(0.9);
	box-shadow: 0 2rpx 8rpx rgba(255, 77, 109, 0.2);
}

.publish-btn .heart-icon {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
}

.publish-btn .add-icon {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	z-index: 1;
}

/* 朋友圈列表容器 */
.moments-container {
	padding: 0 25rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}

/* 朋友圈卡片 */
.moment-card {
	width: 700rpx;
	background: #fff;
	border-radius: 24rpx;
	padding: 32rpx;
	margin-bottom: 24rpx;
	box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
	transition: all 0.3s ease;
	box-sizing: border-box;
}

.moment-card:active {
	transform: translateY(-2rpx);
	box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

/* 朋友圈头部 */
.moment-header {
	margin-bottom: 24rpx;
}

.user-section {
	display: flex;
	align-items: center;
	gap: 20rpx;
}

.moment-avatar {
	width: 80rpx;
	height: 80rpx;
	flex-shrink: 0;
	border-radius: 50%;
	overflow: hidden;
	background: #f0f0f0;
}

.user-info {
	display: flex;
	flex-direction: column;
	gap: 8rpx;
	flex: 1;
}

.user-name {
	font-size: 30rpx;
	font-weight: 600;
	color: #333;
}

.post-time {
	font-size: 24rpx;
	color: #999;
}

/* 朋友圈内容 */
.moment-content {
	margin-bottom: 24rpx;
}

.content-text {
	font-size: 30rpx;
	color: #333;
	line-height: 1.6;
	word-break: break-all;
}

/* 图片展示 - 3x3网格布局 */
.moment-images {
	display: grid;
	grid-template-columns: repeat(3, 1fr);
	gap: 12rpx;
	margin-bottom: 24rpx;
}

/* 统一的网格图片样式 */
.moment-image-grid {
	width: 100%;
	height: 200rpx;
	border-radius: 12rpx;
	overflow: hidden;
	display: block;
	background: #f5f5f5;
}

/* 位置信息 */
.moment-location {
	display: flex;
	align-items: center;
	gap: 8rpx;
	margin-bottom: 24rpx;
	padding: 12rpx 20rpx;
	background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 100%);
	border-radius: 12rpx;
	width: fit-content;
}

.location-text {
	font-size: 26rpx;
	color: #0052d9;
	font-weight: 500;
}

/* 底部操作按钮 */
.moment-actions {
	display: flex;
	justify-content: space-between;
	align-items: center;
	gap: 16rpx;
	padding-top: 8rpx;
}

.action-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 8rpx;
	padding: 8rpx 24rpx;
	border-radius: 16rpx;
	transition: all 0.3s ease;
	flex: 0 0 auto;
}

/* 横向排列的按钮（点赞和评论） */
.action-item-horizontal {
	flex-direction: row;
	justify-content: center;
}

.action-item:active {
	background: #f5f5f5;
	transform: scale(0.95);
}

.action-item.liked {
	background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 100%);
}

.action-text {
	font-size: 24rpx;
	color: #666;
	font-weight: 500;
}

.action-text.active {
	color: #0052d9;
	font-weight: 600;
}

/* 删除按钮样式 */
.action-item-delete {
	opacity: 0.8;
	margin-right: auto;
}

.action-item-delete:active {
	background: #ffebee;
}

.delete-text {
	color: #ff4444;
}

/* 空状态 */
.empty-container {
	width: 700rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 120rpx 40rpx;
	background: #fff;
	border-radius: 24rpx;
	box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
	box-sizing: border-box;
}

/* 分割线自定义样式 */
.moment-card t-divider {
	margin: 24rpx 0;
}

/* 登录弹窗样式 */
.auth-mask {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, 0.5);
	display: flex;
	align-items: flex-end;
	justify-content: center;
	z-index: 9999;
}

.auth-modal {
	width: 100%;
	background-color: #ffffff;
	border-top-left-radius: 30rpx;
	border-top-right-radius: 30rpx;
	padding: 60rpx 40rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
	from {
		transform: translateY(100%);
	}
	to {
		transform: translateY(0);
	}
}

.brand {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-bottom: 60rpx;
}

.slogan {
	margin-top: 30rpx;
	color: #666;
	font-size: 28rpx;
	text-align: center;
	max-width: 500rpx;
	line-height: 1.6;
}

.actions {
	width: 500rpx;
	display: flex;
	flex-direction: column;
	gap: 24rpx;
}

/* 评论弹窗样式 */
.comment-mask {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, 0.5);
	display: flex;
	align-items: flex-end;
	justify-content: center;
	z-index: 10000;
}

.comment-modal {
	width: 100%;
	max-height: 80vh;
	background-color: #ffffff;
	border-top-left-radius: 30rpx;
	border-top-right-radius: 30rpx;
	display: flex;
	flex-direction: column;
	animation: slideUp 0.3s ease-out;
}

.comment-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 30rpx 40rpx;
	border-bottom: 1rpx solid #f0f0f0;
}

.comment-title {
	font-size: 32rpx;
	font-weight: 600;
	color: #333;
}

.comment-list {
	flex: 1;
	padding: 20rpx 40rpx;
	overflow-y: auto;
}

.comment-item {
	margin-bottom: 30rpx;
	padding-bottom: 30rpx;
	border-bottom: 1rpx solid #f5f5f5;
}

.comment-item:last-child {
	border-bottom: none;
}

.comment-user {
	display: flex;
	align-items: flex-start;
	margin-bottom: 16rpx;
}

.comment-avatar {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	margin-right: 16rpx;
	background: #f0f0f0;
	flex-shrink: 0;
}

.comment-info {
	flex: 1;
	display: flex;
	flex-direction: column;
}

.comment-user-info {
	display: flex;
	align-items: center;
	gap: 12rpx;
	margin-bottom: 6rpx;
}

.comment-username {
	font-size: 28rpx;
	font-weight: 500;
	color: #333;
}

.comment-role {
	font-size: 20rpx;
	color: #0052d9;
	background: #e6f0ff;
	padding: 2rpx 12rpx;
	border-radius: 8rpx;
}

.comment-time {
	font-size: 24rpx;
	color: #999;
}

.comment-content {
	font-size: 28rpx;
	line-height: 1.6;
	color: #333;
	margin-bottom: 16rpx;
	word-wrap: break-word;
}

.reply-to {
	color: #0052d9;
	font-weight: 500;
}

.comment-actions {
	display: flex;
	gap: 30rpx;
}

.comment-action-btn {
	font-size: 24rpx;
	color: #666;
	padding: 6rpx 0;
	cursor: pointer;
}

.comment-action-btn.delete {
	color: #ff4444;
}

.comment-empty {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 100rpx 0;
}

.empty-text {
	margin-top: 20rpx;
	font-size: 28rpx;
	color: #999;
}

.reply-hint {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 16rpx 40rpx;
	background: #f5f5f5;
}

.reply-hint-text {
	font-size: 26rpx;
	color: #0052d9;
}

.comment-input-wrapper {
	display: flex;
	align-items: center;
	padding: 20rpx 40rpx;
	background: #fff;
	border-top: 1rpx solid #f0f0f0;
	gap: 20rpx;
}

.comment-input {
	flex: 1;
	height: 70rpx;
	padding: 0 24rpx;
	background: #f5f5f5;
	border-radius: 35rpx;
	font-size: 28rpx;
}

.comment-send-btn {
	width: 100rpx;
	height: 60rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background: #e0e0e0;
	color: #999;
	border-radius: 30rpx;
	font-size: 28rpx;
	transition: all 0.3s;
}

.comment-send-btn.active {
	background: #0052d9;
	color: #fff;
}

/* 评论预览区域样式 */
.comment-preview {
	margin-top: 20rpx;
	padding: 20rpx 24rpx;
	background: #f8f8f8;
	border-radius: 12rpx;
}

.preview-comment-item {
	margin-bottom: 12rpx;
	font-size: 26rpx;
	line-height: 1.6;
	word-wrap: break-word;
}

.preview-comment-item:last-child {
	margin-bottom: 0;
}

.preview-comment-role {
	color: #0052d9;
	font-weight: 500;
}

.preview-comment-content {
	color: #333;
}

.preview-reply-to {
	color: #0052d9;
}

.more-comments {
	margin-top: 12rpx;
	padding-top: 12rpx;
	border-top: 1rpx solid #e8e8e8;
	text-align: center;
}

.more-comments-text {
	font-size: 28rpx;
	color: #999;
	letter-spacing: 2rpx;
}

/* 点赞动画样式 */
.like-animation-container {
	position: fixed;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	z-index: 10001;
	pointer-events: none;
}

.like-animation {
	display: flex;
	align-items: center;
	justify-content: center;
}

/* 点赞动画 */
.like-animation.like .heart-icon {
	font-size: 200rpx;
	animation: likeHeartBeat 0.8s ease-out forwards;
}

@keyframes likeHeartBeat {
	0% {
		transform: scale(0);
		opacity: 0;
	}
	50% {
		transform: scale(1.3);
		opacity: 1;
	}
	70% {
		transform: scale(0.9);
		opacity: 1;
	}
	100% {
		transform: scale(1);
		opacity: 0;
	}
}

/* 取消点赞动画 */
.like-animation.unlike .heart-break-container {
	position: relative;
	width: 200rpx;
	height: 200rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.heart-piece {
	position: absolute;
	font-size: 100rpx;
	animation: heartBreak 0.8s ease-out forwards;
}

.heart-piece-1 {
	animation: heartBreakLeft 0.8s ease-out forwards;
}

.heart-piece-2 {
	animation: heartBreakRight 0.8s ease-out forwards;
}

@keyframes heartBreakLeft {
	0% {
		transform: translate(0, 0) rotate(0deg) scale(1);
		opacity: 1;
	}
	100% {
		transform: translate(-60rpx, -40rpx) rotate(-30deg) scale(0.5);
		opacity: 0;
	}
}

@keyframes heartBreakRight {
	0% {
		transform: translate(0, 0) rotate(0deg) scale(1);
		opacity: 1;
	}
	100% {
		transform: translate(60rpx, 40rpx) rotate(30deg) scale(0.5);
		opacity: 0;
	}
}
