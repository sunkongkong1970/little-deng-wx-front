/* 页面容器 */
.page {
	min-height: 100vh;
	background: #EDEDED;
	padding-bottom: env(safe-area-inset-bottom);
}

/* 个人信息头部 */
.profile-header {
	position: relative;
	width: 100%;
	height: 400rpx;
	background: #f5f5f5;
	margin-bottom: 8px;
}

.cover-image {
	width: 100%;
	height: 100%;
	display: block;
}

.user-info-box {
	position: absolute;
	bottom: 20rpx;
	right: 20rpx;
	display: flex;
	flex-direction: column;
	align-items: flex-end;
	gap: 12rpx;
}

.user-nickname {
	font-size: 17px;
	font-weight: 600;
	color: #fff;
	text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
}

.user-avatar {
	border: 3px solid #fff;
	box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
}

/* 相机按钮 */
.camera-btn {
	position: absolute;
	top: 20rpx;
	right: 20rpx;
	width: 80rpx;
	height: 80rpx;
	background: rgba(0, 0, 0, 0.4);
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	backdrop-filter: blur(10px);
	-webkit-backdrop-filter: blur(10px);
	transition: all 0.2s;
}

.camera-btn:active {
	background: rgba(0, 0, 0, 0.6);
	transform: scale(0.95);
}

/* 朋友圈列表 */
.moments-list {
	padding-bottom: 20px;
}

/* 朋友圈单项 */
.moment-item {
	display: flex;
	padding: 16px 12px;
	background: #fff;
	border-bottom: 1px solid #E5E5E5;
}

.moment-avatar {
	width: 40px;
	height: 40px;
	margin-right: 12px;
	flex-shrink: 0;
}

.moment-main {
	flex: 1;
	min-width: 0;
}

/* 朋友圈头部 */
.moment-header {
	margin-bottom: 4px;
}

.nickname {
	font-size: 15px;
	font-weight: 600;
	color: #576B95;
	line-height: 1.4;
}

/* 朋友圈内容 */
.moment-content {
	margin-bottom: 8px;
}

.content-text {
	font-size: 16px;
	color: #000;
	line-height: 1.5;
	word-break: break-all;
}

/* 图片展示 */
.moment-images {
	display: grid;
	gap: 4px;
	margin: 8px 0;
}

/* 1张图片 */
.moment-images .moment-image-1 {
	width: 100%;
	max-width: 240px;
	height: 240px;
}

/* 2-4张图片 */
.moment-images:has(.moment-image-2),
.moment-images:has(.moment-image-3),
.moment-images:has(.moment-image-4) {
	grid-template-columns: repeat(2, 1fr);
}

.moment-image-2,
.moment-image-3,
.moment-image-4 {
	width: 100%;
	height: 0;
	padding-bottom: 100%;
	position: relative;
}

/* 5-9张图片 */
.moment-images:has(.moment-image-5),
.moment-images:has(.moment-image-6),
.moment-images:has(.moment-image-7),
.moment-images:has(.moment-image-8),
.moment-images:has(.moment-image-9) {
	grid-template-columns: repeat(3, 1fr);
}

.moment-image-5,
.moment-image-6,
.moment-image-7,
.moment-image-8,
.moment-image-9 {
	width: 100%;
	height: 0;
	padding-bottom: 100%;
	position: relative;
}

.moment-image {
	border-radius: 4px;
	background: #f5f5f5;
}

/* 位置信息 */
.moment-location {
	display: flex;
	align-items: center;
	gap: 2px;
	margin: 8px 0 4px;
}

.location-text {
	font-size: 13px;
	color: #586C94;
}

/* 时间 */
.moment-time {
	font-size: 13px;
	color: #999;
	margin-top: 4px;
	margin-bottom: 8px;
}

/* 底部操作 */
.moment-footer {
	display: flex;
	gap: 20px;
	align-items: center;
	padding-top: 4px;
}

.action-item {
	display: flex;
	align-items: center;
	gap: 4px;
	padding: 4px 0;
	transition: opacity 0.2s;
}

.action-item:active {
	opacity: 0.6;
}

.action-count {
	font-size: 13px;
	color: #999;
}

/* 空状态 */
.empty-tip {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 120px 20px;
	gap: 16px;
	background: #fff;
}

.empty-text {
	font-size: 15px;
	color: #999;
	text-align: center;
}
