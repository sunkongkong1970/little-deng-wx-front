/* 页面容器 */
.page {
	min-height: 100vh;
	background: #f5f5f5;
	padding-bottom: calc(env(safe-area-inset-bottom) + 32rpx);
}

/* 个人信息头部卡片 */
.profile-card {
	position: relative;
	margin: 30rpx auto;
	margin-bottom: 24rpx;
	width: 700rpx;
	border-radius: 24rpx;
	overflow: hidden;
	background: #fff;
	box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.cover-container {
	position: relative;
	width: 700rpx;
	height: 400rpx;
	overflow: hidden;
	cursor: pointer;
	transition: all 0.3s ease;
}

.cover-container:active {
	opacity: 0.9;
	transform: scale(0.99);
}

.cover-image {
	width: 100%;
	height: 100%;
	object-fit: cover;
}

.overlay {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.3) 100%);
}

.user-info-container {
	position: absolute;
	bottom: 24rpx;
	left: 24rpx;
	display: flex;
	align-items: center;
	gap: 16rpx;
	z-index: 2;
}

.user-avatar {
	width: 80rpx;
	height: 80rpx;
	border: 4rpx solid #fff;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
	border-radius: 50%;
	overflow: hidden;
	background: #f0f0f0;
	flex-shrink: 0;
}

.user-nickname {
	font-size: 32rpx;
	font-weight: 600;
	color: #fff;
	text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
}

/* 发布按钮 */
.publish-btn {
	position: absolute;
	top: 24rpx;
	right: 24rpx;
	width: 88rpx;
	height: 88rpx;
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
	transition: all 0.3s ease;
	z-index: 2;
}

.publish-btn:active {
	transform: scale(0.92);
	box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 朋友圈列表容器 */
.moments-container {
	padding: 0 25rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}

/* 朋友圈卡片 */
.moment-card {
	width: 700rpx;
	background: #fff;
	border-radius: 24rpx;
	padding: 32rpx;
	margin-bottom: 24rpx;
	box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
	transition: all 0.3s ease;
	box-sizing: border-box;
}

.moment-card:active {
	transform: translateY(-2rpx);
	box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

/* 朋友圈头部 */
.moment-header {
	margin-bottom: 24rpx;
}

.user-section {
	display: flex;
	align-items: center;
	gap: 20rpx;
}

.moment-avatar {
	width: 80rpx;
	height: 80rpx;
	flex-shrink: 0;
	border-radius: 50%;
	overflow: hidden;
	background: #f0f0f0;
}

.user-info {
	display: flex;
	flex-direction: column;
	gap: 8rpx;
	flex: 1;
}

.user-name {
	font-size: 30rpx;
	font-weight: 600;
	color: #333;
}

.post-time {
	font-size: 24rpx;
	color: #999;
}

/* 朋友圈内容 */
.moment-content {
	margin-bottom: 24rpx;
}

.content-text {
	font-size: 30rpx;
	color: #333;
	line-height: 1.6;
	word-break: break-all;
}

/* 图片展示 - 3x3网格布局 */
.moment-images {
	display: grid;
	grid-template-columns: repeat(3, 1fr);
	gap: 12rpx;
	margin-bottom: 24rpx;
}

/* 统一的网格图片样式 */
.moment-image-grid {
	width: 100%;
	height: 200rpx;
	border-radius: 12rpx;
	overflow: hidden;
	display: block;
	background: #f5f5f5;
}

/* 位置信息 */
.moment-location {
	display: flex;
	align-items: center;
	gap: 8rpx;
	margin-bottom: 24rpx;
	padding: 12rpx 20rpx;
	background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 100%);
	border-radius: 12rpx;
	width: fit-content;
}

.location-text {
	font-size: 26rpx;
	color: #0052d9;
	font-weight: 500;
}

/* 底部操作按钮 */
.moment-actions {
	display: flex;
	justify-content: flex-end;
	align-items: center;
	gap: 16rpx;
	padding-top: 8rpx;
}

.action-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 8rpx;
	padding: 8rpx 24rpx;
	border-radius: 16rpx;
	transition: all 0.3s ease;
	flex: 0 0 auto;
}

/* 横向排列的按钮（点赞和评论） */
.action-item-horizontal {
	flex-direction: row;
	justify-content: center;
}

.action-item:active {
	background: #f5f5f5;
	transform: scale(0.95);
}

.action-item.liked {
	background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 100%);
}

.action-text {
	font-size: 24rpx;
	color: #666;
	font-weight: 500;
}

.action-text.active {
	color: #0052d9;
	font-weight: 600;
}

/* 空状态 */
.empty-container {
	width: 700rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 120rpx 40rpx;
	background: #fff;
	border-radius: 24rpx;
	box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
	box-sizing: border-box;
}

/* 分割线自定义样式 */
.moment-card t-divider {
	margin: 24rpx 0;
}
